@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container h-100">
    <div class="row justify-content-sm-center h-100">
        <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
            <div class="headings">
                <h2 class="heading">@ViewData["Title"]</h2>
            </div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-form-outer">

                <h4 class="heading">Create a new account.</h4>

                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="login-form-inner">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="login-form-inner">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="login-form-inner">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="login-form-inner">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="login-form-inner">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="login-form-inner">
                    <label asp-for="Input.City"></label>
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="login-form-inner">
                    <label asp-for="Input.State"></label>
                    <input asp-for="Input.State" class="form-control" />
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
                <div class="login-form-inner">
                    <label asp-for="Input.PostalCode"></label>
                    <input asp-for="Input.PostalCode" class="form-control" />
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>
                <div class="login-form-inner">
                    <label asp-for="Input.Country"></label>
                    <select asp-for="Input.Country" class="form-control">
                        <option value="">Select Country</option>
                        @foreach (var country in Model.countries)
                        {
                            <option value="@country.Name">@country.Name</option>
                        }
                    </select>
                </div>

                <div class="login-form-inner">
                    <recaptcha language="en-GB" />
                </div>
                <button type="submit" class="btn btn-primary register-button">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
