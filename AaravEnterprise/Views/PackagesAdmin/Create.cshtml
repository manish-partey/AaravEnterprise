@model Package
<div class="container">
    <div class="headings">
        <h2 class="heading">Create Package</h2>
    </div>
    <div class="row">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td><label name="ServicesId" id="ServicesId" class="ms-2">Service</label></td>
                    <td><select name="ServicesId" id="ServicesId" asp-items="@ViewBag.Services" class="form-control"></select></td>
                </tr>
                <tr>
                    <td>
                        <span asp-validation-for="PackageTitle" class="text-danger"></span>
                        <label asp-for="PackageTitle" class="ms-2"></label>
                    </td>
                    <td><input asp-for="PackageTitle" class="form-control border-0 shadow" /></td>
                </tr>
                <tr>
                    <td>
                        <span asp-validation-for="Price" class="text-danger"></span>
                        <label asp-for="Price" class="ms-2"></label>
                    </td>
                    <td>
                        <input asp-for="Price" class="form-control border-0 shadow" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="PackageDescription" class="ms-2 text-muted"></label>
                    </td>
                    <td>
                        <textarea asp-for="PackageDescription" class="form-control border-0 shadow"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary register-button">Create</button>
                        <a asp-controller="PackagesAdmin" asp-action="Index" class="btn btn-dange deletelink">
                            Back to List
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}