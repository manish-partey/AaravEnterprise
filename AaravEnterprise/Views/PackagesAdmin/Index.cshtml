@using AaravEnterprise.ViewModel;
@model List<PackagesAdminViewModel>



<div class="container">
    <div class="headings">
        <h2 class="heading">Package List</h2>
    </div>
    <div class="row">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="PackagesAdmin" asp-action="Create" class="btn btn-primary admin-create-button">
                    Create New Package
                </a>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Service Name</th>
                    <th scope="col">Package Name</th>
                    <th scope="col">Amount </th>
                    <th scope="col">Remove </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Id))
                {
                    <tr>
                        <td scope="row"> @obj.Id</td>
                        <td>@obj.ServiceTitle</td>
                        <td>@obj.PackageTitle</td>
                        <td>
                            <a asp-controller="PackagesAdmin" asp-action="Edit" asp-route-PackageId="@obj.PackageId" class="btn btn-primary mx-2 admin-button">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="PackagesAdmin" asp-action="Delete" asp-route-id="@obj.PackageId" class="btn btn-danger mx-2 admin-button">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </td>
                        <td>
                            <a asp-action="RemoveCartItem" asp-route-CartId="@obj.Id" class="btn-danger deletelink" style="cursor: pointer;">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>